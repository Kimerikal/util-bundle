{% block ajax_select_widget %}
    {% spaceless %}
        {% if expanded %}
            <ul {{ block('widget_container_attributes') }}>
                {% for child in form %}
                    <li>
                        {{ form_widget(child) }}
                        {{ form_label(child) }}
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            {%if curVal is defined %}
                <select {{ block('widget_attributes') }}>
                    <option value="{{curVal.value}}" selected="selected">{{curVal.text}}</option>
                </select>
            {% else %}
                {{ block('choice_widget') }}
            {%endif%}
        {% endif %}
    {% endspaceless %}
{% endblock %}